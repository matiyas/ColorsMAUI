<?xml version="1.0" encoding="UTF-8" ?>

<!-- Here you can define layout for an entire application -->
<!-- It can be loosely related to layout in Vue.js -->
<!-- FlayoutBehavior specifies if flayout menu should be visible, hidden or expandable -->
<Shell
    x:Class="ColorsMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ColorsMAUI"
    Shell.FlyoutBehavior="Disabled">

    <!-- You can define here one of the following elements -->
    <!-- <Tab> -->
    <!-- <TabBar> -->
    <!-- <ShellContent> -->

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
